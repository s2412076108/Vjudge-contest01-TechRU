#include <bits/stdc++.h>
using namespace std;

int main(){
    int t;
    cin >> t;
    while (t--){
        int x, k;
        cin >> x >> k;
        if (x %k != 0){
            cout << 1 << endl;
            cout << x << endl;
        }
        else{
            for (int i=1;i <= x; i++){
                if (i %x != 0){
                    int x1 =i;
                    int x2 = x - i;
                    if (x1 % k != 0 && x2 % k != 0){
                        cout << 2 << endl;
                        cout << x1 << " " << x2 << endl;
                        break;
                    }
                }
            }
        }
    }
}
